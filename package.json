{
  "name": "solidx.js",
  "version": "2.7.4",
  "description": "A New Way of 3D Programming",
  "files": [
    "dist",
    "assets"
  ],
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run build:rt-emit && rm -rf dist/* && webpack build --progress --env production && tsc -p tsconfig.build.json",
    "build:rt-emit": "webpack build --progress --env rt-emit && node ./node_modules/.cache/rt-emit.js",
    "local": "webpack serve --progress --env local",
    "ci": "prettier --check src && tsc -p tsconfig.json --noEmit",
    "ci:e2e": "npm run build:rt-emit && cypress run --component --browser chrome -C cypress/cypress.config.ts --no-runner-ui --headless",
    "release": "npm run ci && npm run ci:e2e && rm -rf dist/* && npm run build && release-it",
    "cypress:open": "npm run build:rt-emit && cypress open --component --browser chrome -C cypress/cypress.config.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/stats.js": "^0.17.3",
    "cypress": "^13.6.2",
    "cypress-ct-lit": "^0.4.0",
    "cypress-image-snapshot": "^4.0.1",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.6.0",
    "lodash": "^4.17.21",
    "path-browserify": "^1.0.1",
    "prettier": "^3.1.0",
    "release-it": "^17.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "@babylonjs/core": "^6.37.1",
    "@babylonjs/gui": "^6.37.1",
    "@babylonjs/gui-editor": "^6.37.1",
    "@babylonjs/inspector": "^6.37.1",
    "@babylonjs/loaders": "^6.37.1",
    "@babylonjs/materials": "^6.37.1",
    "@babylonjs/serializers": "^6.37.1",
    "@lit/context": "^1.1.0",
    "ah-logger": "^3.2.8",
    "chroma-js": "^2.4.2",
    "lit": "^3.1.0",
    "lodash": "^4.17.21",
    "solidx-assets": "^1.0.1",
    "stats.js": "^0.17.0",
    "tslib": "^2.6.2"
  }
}
